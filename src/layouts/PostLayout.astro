---
import "../css/main.css";

import { ClientRouter } from "astro:transitions";

import FuzzyOverlay from "../components/FuzzyOverlay.astro";
import Navbar from "../components/Navbar.astro";
import MarkdownHighlight from "../components/MarkdownHighlight.astro";
const { frontmatter } = Astro.props;

const pubDate = new Date(frontmatter.pubDate);
const year = pubDate.getFullYear();
const month = pubDate.toLocaleString("en-US", { month: "long" }).toUpperCase();
const day = String(pubDate.getDate()).padStart(2, "0");
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <title>{frontmatter.title}</title>

        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/katex@0.16.22/dist/katex.min.css"
            integrity="sha384-5TcZemv2l/9On385z///+d7MSYlvIEw9FuZTIdZ14vJLqWphw7e7ZPuOiCHJcFCP"
            crossorigin="anonymous"
        />
    </head><body style="overflow-x: hidden;">
        <article class="main">
            <div class="mainborder"></div>
            <div class="headline">
                <h6><code>{month}-{day}-{year}</code></h6>
                <h1>{frontmatter.title}</h1>
                <h5>{frontmatter.description}</h5>
            </div>
            <hr />
            <slot />
        </article>
        <ClientRouter />
    </body>

    <Navbar />
    <FuzzyOverlay />
    <MarkdownHighlight />
</html>
